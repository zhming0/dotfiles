# Set ft=gitconfig

[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[rerere]
	enabled = true
[core]
	excludesFile = ~/.gitignore
[rebase]
  autoStash = true
[push]
  autoSetupRemote = true

[include]
  path = ~/.config/.gitconfig-local

[url "git@github.com:"]
	insteadOf = https://github.com/
